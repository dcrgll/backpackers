{
  "name": "backpack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "yarn standard && yarn lint",
    "setup": "yarn db:up && yarn db:seed",
    "db:up": "firebase emulators:start",
    "db:seed": "node ./src/config/seed.js",
